              "raw": "{\n  \"rut\": \"99999999-9\",\n  \"razonSocial\": \"Cliente Demo Ltda.\",\n  \"giro\": \"Servicios\",\n  \"direccion\": \"Av. Demo 123\",\n  \"comuna\": \"Providencia\",\n  \"ciudad\": \"Santiago\",\n  \"telefono\": \"+56999999999\",\n  \"email\": \"contacto@demo.cl\"\n}"
