        {
          "name": "Eliminar cliente",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }],
            "url": {
              "raw": "{{base_url}}/clientes/{{clienteId}}",
              "host": ["{{base_url}}"],
              "path": ["clientes", "{{clienteId}}"]
            }
          },
          "response": []
