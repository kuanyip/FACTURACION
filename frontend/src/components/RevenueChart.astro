---
import Icon from './Icon.astro';

const { invoices = [] } = Astro.props;
const months = Array.from({ length: 6 }, (_, index) => {
  const date = new Date();
  date.setMonth(date.getMonth() - (5 - index));
  return {
    key: `${date.getFullYear()}-${date.getMonth()}`,
    label: date.toLocaleString('es-MX', { month: 'short' }),
    total: 0
  };
});

invoices.forEach((invoice) => {
  const value = invoice.issueDate || invoice.createdAt;
  const date = new Date(value);
  if (Number.isNaN(date.getTime())) {
    return;
  }
  const key = `${date.getFullYear()}-${date.getMonth()}`;
  const bucket = months.find((month) => month.key === key);
  if (bucket) {
    bucket.total += Number(invoice.total || 0);
  }
});

const maxTotal = Math.max(...months.map((month) => month.total), 1);
---
<section class="card space-y-4">
  <div class="flex items-center justify-between">
    <div>
      <div class="flex items-center gap-2 text-primary">
        <Icon name="chart" />
        <p class="text-sm uppercase tracking-wide">Tendencia</p>
      </div>
      <h3 class="text-xl font-semibold text-slate-900">Ingresos de los ultimos 6 meses</h3>
    </div>
  </div>
  <div class="mt-6 flex h-56 items-end gap-4">
    {months.map((month) => (
      <div class="flex h-full flex-1 flex-col items-center justify-end text-center" key={month.key}>
        <div
          class="flex w-full max-w-[3rem] items-end justify-center rounded-t-2xl bg-gradient-to-t from-primary/30 via-primary/70 to-accent shadow-lg shadow-primary/30 transition hover:scale-[1.02]"
          style={`height: ${Math.max((month.total / maxTotal) * 100, 5)}%`}
        >
          <span class="block w-full pb-2 text-xs font-semibold text-white">
            ${month.total.toFixed(0)}
          </span>
        </div>
        <p class="mt-2 text-xs uppercase text-slate-500">{month.label}</p>
      </div>
    ))}
  </div>
</section>
